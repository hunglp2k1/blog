<form method="post" class="row mt-4 g-3">
    <div class="col-auto">
        <label for="search-input" class="visually-hidden">Từ khoá</label>
        <input
            type="text"
            class="form-control"
            id="search-input"
            placeholder="Nhập từ khoá"
            name="q"
        />
    </div>
    <div class="col-auto">
        <label for="gender-input" class="visually">Giới tính</label>
        <select name="gender" id="gender-input">
            <option value="">-- Chọn giới tính --</option>
            <option value="male">Nam</option>
            <option value="female">Nữ</option>
        </select>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">Tìm kiếm</button>
    </div>
</form>